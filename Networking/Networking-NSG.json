{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "nsg": {
            "type": "object",
            "defaultValue": {
                "resourcegroup": "nsg-rg",
                "securitygroups": [
                    {
                        "name": "Spoke1-Subnet1-NSG",
                        "rules": [
                            {
                                "ruleName": "Rule1",
                                "protocol": "*",
                                "direction": "Inbound",
                                "access": "Allow",
                                "sourcePortRange": "*",
                                "sourceAddressPrefix": "192.168.0.0/24",
                                "destinationPortRange": "3389",
                                "destinationAddressPrefix": "*",
                                "priority": 110
                            },
                            {
                                "ruleName": "Rule2",
                                "protocol": "*",
                                "direction": "Inbound",
                                "access": "Allow",
                                "sourcePortRange": "*",
                                "sourceAddressPrefix": "192.168.0.0/24",
                                "destinationPortRange": "22",
                                "destinationAddressPrefix": "*",
                                "priority": 120
                            }
                        ]
                    },
                    {
                        "name": "Spoke1-Subnet2-NSG",
                        "rules": [
                            {
                                "ruleName": "Rule1",
                                "protocol": "*",
                                "direction": "Inbound",
                                "access": "Allow",
                                "sourcePortRange": "*",
                                "sourceAddressPrefix": "*",
                                "destinationPortRange": "80",
                                "destinationAddressPrefix": "*",
                                "priority": 110
                            }
                        ]
                    }
                ]
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[parameters('nsg').securitygroups[copyIndex()].name]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2017-10-01",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "nsgloop",
                "count": "[length(parameters('nsg').securitygroups)]"
            },
            "properties": {
                "securityRules": {
                    "copy": [
                        {
                            "name": "rulescopy",
                            "count": "[length(parameters('nsg').securitygroups.rules[copyIndex('nsgloop')])]",
                            "input": {
                                "protocol": "[parameters('nsg').securitygroups.rules[copyIndex('rulescopy')].protocol]",
                                "sourcePortRange": "[parameters('nsg').securitygroups.rules[copyIndex('rulescopy')].sourcePortRange]",
                                "destinationPortRange": "[parameters('nsg').securitygroups.rules[copyIndex('rulescopy')].destinationPortRange]",
                                "sourceAddressPrefix": "[parameters('nsg').securitygroups.rules[copyIndex('rulescopy')].sourceAddressPrefix]",
                                "destinationAddressPrefix": "[parameters('nsg').securitygroups.rules[copyIndex('rulescopy')].destinationAddressPrefix]",
                                "access": "[parameters('nsg').securitygroups.rules[copyIndex('rulescopy')].allow]",
                                "priority": "[parameters('nsg').securitygroups.rules[copyIndex('rulescopy')].priority]",
                                "direction": "[parameters('nsg').securitygroups.rules[copyIndex('rulescopy')].direction]"
                            }
                        }
                    ]
                }
            }
        }],
        "outputs": {}
    }