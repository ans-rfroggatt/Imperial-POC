{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "nsg": {
            "type": "object",
            "defaultValue": {
                "resourcegroup": "nsg-rg",
                "securitygroups": [
                    {
                        "name": "Spoke1-Subnet1-NSG",
                        "protocol": "*",
                        "destinationPortRange": "3389",
                        "sourceAddressPrefix": "*",
                        "direction": "Inbound"
                    },
                    {
                        "name": "Spoke1-Subnet2-NSG",
                        "protocol": "*",
                        "destinationPortRange": "22",
                        "sourceAddressPrefix": "*",
                        "direction": "Inbound"
                    },
                    {
                        "name": "Spoke2-Subnet1-NSG",
                        "protocol": "*",
                        "destinationPortRange": "22",
                        "sourceAddressPrefix": "*",
                        "direction": "Inbound"
                    }
                ]
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[parameters('nsg').securitygroups[copyIndex()].name]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2017-10-01",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "nsgloop",
                "count": "[length(parameters('nsg').securitygroups)]"
            },
            "properties": {
                "securityRules": [
                    {
                        "name": "NSG-Rule-1",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "[parameters('nsg').securitygroups[copyIndex()].destinationPortRange]",
                            "sourceAddressPrefix": "[parameters('nsg').securitygroups[copyIndex()].sourceAddressPrefix]",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": "100",
                            "direction": "[parameters('nsg').securitygroups[copyIndex()].direction]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}